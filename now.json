{
	"name": "Goals",
	"version": 2,
	"scope": "independant-developers",
	"builds": [
		{
			"src": "api/goals/*.js",
			"use": "@now/node",
			"config": {
				"maxLambdaSize": "50mb"
			}
		},
		{
			"src": "api/payments/*.js",
			"use": "@now/node",
			"config": {
				"maxLambdaSize": "50mb"
			}
		},
		{
			"src": "api/streamers/*.js",
			"use": "@now/node",
			"config": {
				"maxLambdaSize": "50mb"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/api/$1"
		},
		{
			"src": "/redirect-test",
			"status": 302,
			"headers": {
				"location": "https://google.com"
			}
		},
		{
			"src": "/(.*)",
			"dest": "/www/$1",
			"headers": {
				"x-request-path": "$1"
			}
		}
	],
	"github": {
		"autoAlias": true
	},
	"env": {
		"TWITCH_EXT_SECRET": "@twitch_ext_secret",
		"TWITCH_CLIENT_ID": "@twitch_client_id",
		"TWITCH_OWNER_EXT_ID": "@twitch_owner_ext_id",
		"FIREBASE_APP_ID": "@firebase_app_id",
		"FIREBASE_PROJECT_ID": "@firebase_project_id",
		"FIREBASE_API_KEY": "@firebase_api_key",
		"FIREBASE_DATABASE_URL": "@firebase_database_url",
		"FIREBASE_AUTH_DOMAIN": "@firebase_auth_domain",
		"FIREBASE_SENDER_ID": "@firebase_sender_id"
	}
}
